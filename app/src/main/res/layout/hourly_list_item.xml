<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        tools:text="12 PM"
        android:gravity="center"
        android:id="@+id/TimeLabelHourlyList"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageHourlyList"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/TimeLabelHourlyList"
        android:layout_toEndOf="@+id/TimeLabelHourlyList"
        android:src="@drawable/sunny"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/bg_temperature"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="18sp"
        android:id="@+id/temperatureValueHourlyList"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignBaseline="@+id/imageView"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Partly Cloudy"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toLeftOf="@+id/temperatureValueHourlyList"
        android:layout_toRightOf="@+id/iconImageHourlyList"
        android:textSize="20sp"/>
</RelativeLayout>